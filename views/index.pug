extends layout
	
var fString = myFunction.toString()
block content
  .logo1
    document.write(ip_local)
  .ip
    document.write(ip_local)
  .timer
  .logo2
    img(src="/images/logo360-2.png")
  .fighter-name-1
    input#fighter-name-1(
      type="text",
      placeholder="Click to enter fighter's name"
    )
  .fighter-name-2
    input#fighter-name-2(
      type="text",
      placeholder="Click to enter fighter's name"
    )
  .fighter-score-1 0
  .fighter-score-2 0
  .fighter-adv-1 0
  .fighter-penal-1 0
  .fighter-adv-2 0
  .fighter-penal-2 0
  .fighter-controls-add-1
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="add2f1"
    ) + 2
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="add3f1"
    ) + 3
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="add4f1"
    ) + 4
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="addadvf1"
    ) + Advantage
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="addpenalf1"
    ) + Penalty
  .controls-1
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="addmin"
    ) + min
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="submin"
    ) - min
  .fighter-controls-add-2
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="add2f2"
    ) + 2
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="add3f2"
    ) + 3
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="add4f2"
    ) + 4
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="addadvf2"
    ) + Advantage
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="addpenalf2"
    ) + Penalty
  .fighter-controls-sub-1
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="sub2f1"
    ) - 2
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="sub3f1"
    ) - 3
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="sub4f1"
    ) - 4
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="subadvf1"
    ) - Advantage
    button(
      type=button
      class="btn btn-dark btn-sm"
      id="subpenalf1"
    ) - Penalty
  .controls-2
    button(
      type=button
      class="btn btn-success"
      id="start"
    )  Start / Pause
    button(
      type=button
      class="btn btn-info"
      id="restart"
